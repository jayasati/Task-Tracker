datasource db {
  provider = "postgresql"

}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id       String   @id @default(cuid())
  title    String
  createdAt DateTime @default(now())
  logs     TimeLog[]
  statuses   TaskStatus[]
}

model TimeLog {
  id        String   @id @default(cuid())
  seconds   Int      @default(0)
  date      DateTime
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  @@unique([taskId, date])
}

model TaskStatus {
  id        String   @id @default(cuid())
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  date      DateTime
  status    Status   @default(NONE)

  @@unique([taskId, date])
}

enum Status {
  NONE
  FAIL
  HALF
  SUCCESS
}
